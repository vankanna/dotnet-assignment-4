@using Northwind.Models
@model IEnumerable<Category>

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Product Categories</h2>
<div class="list-group">
    @foreach (Category category in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="Index" asp-route-id="@category.CategoryId">@category.CategoryName - @category.Description</a>
    }
</div>